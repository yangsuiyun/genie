# 🍅 Pomodoro Genie Backend - 环境配置
# 简化版后端服务环境变量配置

# 服务器配置
PORT=8081
GIN_MODE=debug

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pomodoro_genie
DB_SSLMODE=disable

# 数据库连接池配置
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_MAX_LIFETIME_MINUTES=5
DB_MAX_IDLE_TIME_MINUTES=1

# 日志配置
DB_LOG_LEVEL=info

# JWT配置（如果需要）
JWT_SECRET=your-secret-key-here
JWT_EXPIRE_HOURS=24

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:8080,http://localhost:5173
