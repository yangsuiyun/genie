# 🍎 macOS生产环境配置
# PomodoroGenie - 生产环境配置文件

# 应用配置
APP_NAME="PomodoroGenie"
APP_VERSION="1.0.0"
APP_DESCRIPTION="专注力管理工具 - 番茄工作法 + 任务管理"
APP_AUTHOR="PomodoroGenie Team"
APP_WEBSITE="https://github.com/your-username/pomodoro-genie"

# 服务器配置
SERVER_HOST="0.0.0.0"
SERVER_PORT=3001
SERVER_WORKERS=4
SERVER_TIMEOUT=30

# 数据库配置
DATABASE_TYPE="sqlite"  # sqlite, postgresql, mysql
DATABASE_PATH="/Applications/PomodoroGenie/data/pomodoro.db"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="pomodoro_genie"
DATABASE_USER="pomodoro_user"
DATABASE_PASSWORD="secure_password"

# Redis配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# 安全配置
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
ENCRYPTION_KEY="your-encryption-key-32-chars-long"
CORS_ORIGINS="http://localhost:3001,http://127.0.0.1:3001"

# 日志配置
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FILE="/Applications/PomodoroGenie/logs/app.log"
LOG_MAX_SIZE="100MB"
LOG_MAX_FILES=5
LOG_COMPRESS=true

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE="256MB"

# 文件存储配置
UPLOAD_DIR="/Applications/PomodoroGenie/uploads"
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,txt"

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="PomodoroGenie <noreply@pomodorogenie.com>"

# 通知配置
NOTIFICATIONS_ENABLED=true
NOTIFICATION_SOUND=true
NOTIFICATION_VIBRATION=true
DESKTOP_NOTIFICATIONS=true

# 性能配置
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=5
REQUEST_TIMEOUT=30
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL="daily"  # daily, weekly, monthly
BACKUP_RETENTION=30  # days
BACKUP_DIR="/Applications/PomodoroGenie/backups"

# 监控配置
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# 开发配置
DEBUG_MODE=false
HOT_RELOAD=false
PROFILING_ENABLED=false
TEST_MODE=false

# 环境变量
NODE_ENV="production"
FLUTTER_WEB_USE_SKIA=false
FLUTTER_WEB_CANVASKIT_URL="https://unpkg.com/canvaskit-wasm@0.33.0/bin/"

# 网络配置
ALLOWED_HOSTS="localhost,127.0.0.1,0.0.0.0"
BLOCKED_IPS=""
TRUSTED_PROXIES=""

# 功能开关
FEATURE_POMODORO_TIMER=true
FEATURE_TASK_MANAGEMENT=true
FEATURE_STATISTICS=true
FEATURE_WHITE_NOISE=true
FEATURE_NOTIFICATIONS=true
FEATURE_BACKUP=true
FEATURE_EXPORT=true
FEATURE_IMPORT=true

# 主题配置
DEFAULT_THEME="light"  # light, dark, auto
THEME_COLORS={
  "primary": "#2196F3",
  "secondary": "#FFC107",
  "success": "#4CAF50",
  "warning": "#FF9800",
  "error": "#F44336",
  "info": "#00BCD4"
}

# 本地化配置
DEFAULT_LANGUAGE="zh-CN"
SUPPORTED_LANGUAGES="zh-CN,en-US,ja-JP"
TIMEZONE="Asia/Shanghai"
DATE_FORMAT="YYYY-MM-DD"
TIME_FORMAT="HH:mm:ss"

# 更新配置
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL="daily"
UPDATE_CHANNEL="stable"  # stable, beta, alpha
UPDATE_URL="https://api.github.com/repos/your-username/pomodoro-genie/releases/latest"
